{
    "jobDefinitionName": "gene-coverage",
    "type": "container",
    "containerProperties": {
        "image": "outlierbio/rseqc",
        "vcpus": 2,
        "memory": 800,
        "command": [
            "geneBody_coverage.py",
            "-r", "Ref::bedfile",
            "-i", "Ref::input",
            "-o", "Ref::output"
        ],
        "environment": [
            {
                "name": "SCRATCH_DIR",
                "value": "/scratch"
            }
        ],
        "volumes": [
            {
                "host": {
                    "sourcePath": "/mnt/scratch"
                },
                "name": "scratch"
            }
        ],
        "mountPoints": [
            {
                "containerPath": "/scratch",
                "readOnly": false,
                "sourceVolume": "scratch"
            }
        ]
    }
}