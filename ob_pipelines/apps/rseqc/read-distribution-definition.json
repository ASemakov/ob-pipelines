{
    "jobDefinitionName": "read-distribution",
    "type": "container",
    "containerProperties": {
        "image": "outlierbio/rseqc",
        "vcpus": 2,
        "memory": 16000,
        "command": [
            "sh", 
            "/read_distribution.sh",
            "Ref::input",
            "Ref::bedfile",
            "Ref::output"
        ],
        "volumes": [
            {
                "host": {
                    "sourcePath": "/mnt/scratch"
                },
                "name": "scratch"
            },
            {
                "host": {
                    "sourcePath": "/mnt/reference"
                },
                "name": "reference"
            }
        ],
        "environment": [
            {
                "name": "SCRATCH_DIR",
                "value": "/scratch"
            },
            {
                "name": "REFERENCE_DIR",
                "value": "/reference"
            }
        ],
        "mountPoints": [
            {
                "containerPath": "/scratch",
                "readOnly": false,
                "sourceVolume": "scratch"
            },
            {
                "containerPath": "/reference",
                "readOnly": true,
                "sourceVolume": "reference"
            }
        ]
    }
}